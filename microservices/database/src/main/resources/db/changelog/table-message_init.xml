<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Elena Yankovskaya"
               id="create-table-message">
        <createTable schemaName="socialnet"
                     tableName="message"
                     remarks="Личные сообщения">

            <column autoIncrement="true" name="id" type="BIGINT" remarks="ID сообщения">
                <constraints nullable="false" primaryKey="true" primaryKeyName="message_pk" unique="true"/>
            </column>
            <column name="time"
                    type="timestamp"
                    remarks="Время отправки"/>
            <column name="author_id"
                    type="BIGINT"
                    remarks="Автор"/>
            <column name="recipient_id"
                    type="BIGINT"
                    remarks="Получатель"/>
            <column name="message_text"
                    type="text"
                    remarks="Текст сообщения"/>
            <column name="read_status"
                    type="VARCHAR(10)"
                    remarks="Статус прочтения: SENT (не прочитано) и READ (прочитано)"/>

        </createTable>
    </changeSet>

</databaseChangeLog>