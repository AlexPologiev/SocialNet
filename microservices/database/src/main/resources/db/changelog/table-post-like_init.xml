<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Elena Yankovskaya"
               id="create-table-post-like">
        <createTable schemaName="socialnet"
                     tableName="post_like"
                     remarks="Лайки постов">

            <column autoIncrement="true" name="id" type="BIGINT" remarks="ID лайка">
                <constraints nullable="false" primaryKey="true" primaryKeyName="post_like_pk" unique="true"/>
            </column>
            <column name="time"
                    type="timestamp"
                    remarks="Время отправки"/>
            <column name="person_id"
                    type="BIGINT"
                    remarks="ID пользователя, создавшего лайк"/>
            <column name="post_id"
                    type="BIGINT"
                    remarks="ID поста"/>

        </createTable>
    </changeSet>

</databaseChangeLog>